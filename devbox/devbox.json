{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "uv@latest",
    "rustup@latest",
    "bat@latest",
    "direnv@latest",
    "eza@latest",
    "fish@latest",
    "fzf@latest",
    "gh@latest",
    "ghq@latest",
    "go@latest",
    "gopls@latest",
    "imagemagick@latest",
    "jj@latest",
    "jq@latest",
    "lua-language-server@latest",
    "neovim@latest",
    "yq@latest",
    "zellij@latest",
    "nodejs_22@latest",
    "deno@latest",
    "bun@latest",
    "temurin-bin-21@latest",
    "opentofu@latest",
    "difftastic@latest",
    "vscode-langservers-extracted@latest",
    "yaml-language-server@latest",
    "tailwindcss-language-server@latest",
    "vim-language-server@latest",
    "graphql-language-service-cli@latest",
    "stylelint-lsp@latest",
    "vtsls@latest",
    "pnpm@latest"
  ],
  "env": {
    "PNPM_HOME": "$HOME/.local/share/pnpm"
  },
  "shell": {
    "init_hook": [
      "npm list -g neovim typescript @typescript/native-preview > /dev/null 2>&1 || npm install -g neovim typescript @typescript/native-preview"
    ],
    "scripts": {}
  }
}
